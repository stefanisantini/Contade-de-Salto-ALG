algoritmo "conta_de_0_ao_salto"
var
   valor, salto, contador: inteiro
inicio
      contador <- 0
      escreva ("Quer contar até quanto: ")
      leia (valor)
      escreva ("Qual sera o valor do salto: ")
      leia (salto)
      enquanto (contador <= valor) faca
      escreval (contador)
               contador <- contador + salto
      fimenquanto
fimalgoritmo